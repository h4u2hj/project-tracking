<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Button
        core:require="{ handler: 'managestatus/ext/fragment/ProjNumCol'}"
        text="{= (Number(${totalProjects}) === 0) ? 'No projects' : (Number(${totalProjects}) === 1 ? '1 project' : Number(${totalProjects}) + ' projects')}"
        press="handler.onPress"
        icon="sap-icon://detail-view"
        id="idProjNumButton"
    />
    
</core:FragmentDefinition>
